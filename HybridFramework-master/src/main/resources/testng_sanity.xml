<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="FREE CRM Application Test Automation Test Suite">

	<!-- Below Code is for ExtentReport  -->
	<listeners>
		<listener class-name="com.crm.qa.ExtentReportListener.ExtentReportListener"/>
	</listeners>
	
	<test name="Free CRM App Test Cases">
	
		<classes>
			<!-- Below Test Cases will be Executed in Sequence -->
			<!-- Shortcut to Comment [] Ctrl + Shift + / ] -->
			<!-- Commenting Lines in XML file -> Select Code -> Right -> Source -> Add Block Comment -->
			<class name="com.crm.qa.TestCases.LoginPageTest"></class>
			<class name="com.crm.qa.TestCases.HomePageTest"></class>
			<!-- In Sanity, We execute only important Test Cases, Where as in Regression We execute all Test Cases -->
		</classes>
		
	</test>
	
</suite>